<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recu2"
    tools:context=".addLibros" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/txtAutorLibro"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:fontFamily="@font/ar_one_sans"
            android:inputType="text"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloLibro" />

        <EditText
            android:id="@+id/txtISBM"
            android:layout_width="340dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:fontFamily="@font/ar_one_sans"
            android:inputType="number"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAñoPublicacion" />

        <EditText
            android:id="@+id/txtEditorialLibro"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:fontFamily="@font/ar_one_sans"
            android:inputType="text"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPaginasLibro" />

        <EditText
            android:id="@+id/txtAñoPublicacion"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:fontFamily="@font/ar_one_sans"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/txtAutorLibro" />

        <EditText
            android:id="@+id/txtPaginasLibro"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:fontFamily="@font/ar_one_sans"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtISBM" />

        <EditText
            android:id="@+id/txtEstadoLibro"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:fontFamily="@font/ar_one_sans"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAutorLibro" />

        <EditText
            android:id="@+id/txtGeneroLibro"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:fontFamily="@font/ar_one_sans"
            android:inputType="text"
            android:paddingLeft="6sp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/txtISBM" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/ar_one_sans"
            android:text="Editorial:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/txtEditorialLibro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="304dp"
            android:layout_height="105dp"
            android:layout_marginTop="144dp"
            android:fontFamily="@font/palanquin_dark_medium"
            android:text="Completa los campos para añadir un libro"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="124dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="125dp"
            android:background="@drawable/rounded_buttom"
            android:text="Guardar Datos"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtEditorialLibro" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/ar_one_sans"
            android:text="Título del libro:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/txtTituloLibro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <EditText
            android:id="@+id/txtTituloLibro"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:fontFamily="@font/ar_one_sans"
            android:inputType="text"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/ar_one_sans"
            android:text="Autor del libro:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/txtAutorLibro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="13dp"
            android:fontFamily="@font/ar_one_sans"
            android:text="Estado:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/txtEstadoLibro"
            app:layout_constraintStart_toEndOf="@+id/txtAñoPublicacion"
            app:layout_constraintTop_toBottomOf="@+id/txtAutorLibro" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="7dp"
            android:fontFamily="@font/ar_one_sans"
            android:text="Año de publicación:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/txtAñoPublicacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="9dp"
            android:fontFamily="@font/ar_one_sans"
            android:text="Género:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/txtGeneroLibro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/ar_one_sans"
            android:text="ISBM:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/txtISBM"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/ar_one_sans"
            android:text="Número de páginas:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/txtPaginasLibro"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txtGeneroLibro"
            app:layout_constraintTop_toBottomOf="@+id/txtISBM" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>