<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:id="@+id/main"
    tools:context=".CardLibros">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cuadro"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del libro: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor del libro: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_año"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Año de publicación: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado del libro: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_isbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISBM: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_genero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genero: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_paginas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de páginas: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_editorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editorial: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_edit"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Edit Icon"
                android:padding="4dp"
                android:src="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/icon_delete"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:contentDescription="Delete Icon"
                android:padding="4dp"
                android:src="@drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>